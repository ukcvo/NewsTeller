<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="hasActor"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasActor" />
		<property name="numberGetter">
			<bean id="hasActorQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasActor.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="hasActorFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula" value="MAX(0,MIN(x, 2 - (x/2)))" />
				<!-- 0: 0.0, 1: 1.0, 2: 1.0, 3: 0.5, 4: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="hasPlace"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasPlace" />
		<property name="numberGetter">
			<bean id="hasPlaceQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasPlace.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="hasPlaceFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="IF( x == 1, 1, IF (x == 2 || x == 0, 0.5, 0))" />
				<!-- 0: 0.5, 1: 1.0, 2: 0.5, 3: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="A0"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="A0" />
		<property name="numberGetter">
			<bean id="A0Query"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/A0.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="A0Formula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="MAX(0,MIN((3*x + 1)/4, 1 - ((x-1)/2)))" />
				<!-- 0: 0.25, 1: 1.0, 2: 0.5, 3: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="A1"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="A1" />
		<property name="numberGetter">
			<bean id="A1Query"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/A1.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="A1Formula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="MAX(0,MIN((3*x + 1)/4, 1 - ((x-1)/2)))" />
				<!-- 0: 0.25, 1: 1.0, 2: 0.5, 3: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="isSpeechCognitive"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="isSpeechCognitive" />
		<property name="numberGetter">
			<bean id="isSpeechCognitiveQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/isSpeechCognitive.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="isSpeechCognitiveFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula" value="IF(x == 0, 1, 0)" />
				<!-- 0: 1.0, 1: 0.0, 2: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="eventLabel"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="isSpeechCognitive" />
		<property name="numberGetter">
			<bean id="eventLabelQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/eventLabel.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="eventLabelFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="IF( x == 1, 1, IF (x == 2 || x == 0, 0.5, 0))" />
				<!-- 0: 0.5, 1: 1.0, 2: 0.5, 3: 0.0 -->
			</bean>
		</property>
	</bean>

	<bean id="mentions"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="isSpeechCognitive" />
		<property name="numberGetter">
			<bean id="mentionsQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/numberOfMentions.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="mentionsFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="IF( x == 0, 0, MAX(0, (4-x)/3))" />
				<!-- 0: 0.0, 1: 1.0, 2: 0.667, 3: 0.333, 4: 0.0-->
			</bean>
		</property>
	</bean>

	<bean id="areLabelsVerbs"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="isSpeechCognitive" />
		<property name="numberGetter">
			<bean id="areLabelsVerbsQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.WordNetVerbCountDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/areLabelsVerbs.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="areLabelsVerbsFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="x" />
				<!-- coefficientDeterminer already returns value between 0 and 1-->
			</bean>
		</property>
	</bean>

	<bean id="baseline"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasActor" />
		<property name="numberGetter">
			<bean id="baselineQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasPlace.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="baselineFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula" value="0.5" />
			</bean>
		</property>
	</bean>

</beans>