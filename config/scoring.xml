<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="hasActor"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasActor" />
		<property name="numberGetter">
			<bean id="hasActorQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasActor.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="hasActorFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula" value="MAX(0,MIN(x, 1 - ((x-2)/3)))" />
			</bean>
		</property>
	</bean>
	
	<bean id="hasPlace"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasPlace" />
		<property name="numberGetter">
			<bean id="hasPlaceQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasPlace.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="hasPlaceFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula"
					value="IF( x == 1, 1, IF (x == 2 || x == 0, 0.5, 0))" />
			</bean>
		</property>
	</bean>

	<bean id="alwaysTrue"
		class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.EventHeuristic">
		<property name="name" value="hasActor" />
		<property name="numberGetter">
			<bean id="alwaysTrueQuery"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.SPARQLCoefficientDeterminer">
				<constructor-arg name="queryFileName"
					value="resources/SPARQL/usability/hasPlace.qry" />
				<property name="ksAdapter" ref="ksAdapter" />
			</bean>
		</property>
		<property name="formula">
			<bean id="alwaysTrueFormula"
				class="edu.kit.anthropomatik.isl.newsTeller.retrieval.scoring.heuristics.ScoringFormula">
				<constructor-arg name="formula" value="1" />
			</bean>
		</property>
	</bean>

</beans>