<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- filters -->	

	<bean id="balancingFilter" class="weka.filters.MultiFilter">
		<property name="filters">
			<array>
				<ref bean="removeStringFilter"/>
				<ref bean="balancingSpreadFilter"/>
				<!-- 
				<ref bean="balancingSMOTEFilter"/>
				
				 -->
			</array>
		</property>
	</bean>

	<bean id="balancingSMOTEFilter" class="weka.filters.supervised.instance.SMOTE">
		<property name="percentage" value="100" />
	</bean>

	<bean id="balancingSpreadFilter" class="weka.filters.supervised.instance.SpreadSubsample">
		<property name="distributionSpread" value="1" />
	</bean>

	<bean id="removeStringFilter" class="weka.filters.unsupervised.attribute.RemoveType">
		<property name="options">
			<array>
				<value>-T</value>
				<value>string</value>
			</array>
		</property>
	</bean>

	<bean id="spreadFilter" class="weka.filters.supervised.instance.SpreadSubsample">
		<property name="distributionSpread" value="1" />
	</bean>

	<bean id="analysisFilter" class="weka.filters.MultiFilter">
		<property name="filters">
			<array>
				<ref bean="removeStringFilter" />
				<bean class="weka.filters.unsupervised.attribute.Copy">
					<property name="attributeIndices" value="first-24" />
				</bean>
				<bean class="weka.filters.supervised.attribute.Discretize">
					<property name="attributeIndices" value="first-24" />
				</bean>
			</array>
		</property>
	</bean>

	<bean id="classifierFilter" class="weka.filters.MultiFilter">
		<property name="filters">
			<array>
				<bean class="weka.filters.supervised.attribute.Discretize">
					<property name="attributeIndices" value="9,7,11,19,12,3,18" />
				</bean>
				<bean class="weka.filters.unsupervised.attribute.Remove">
					<property name="attributeIndices" value="9,7,5,11,19,12,3,18,25,26,27" />
					<property name="invertSelection" value="true" />
				</bean>
			</array>
		</property>
	</bean>

	<bean id="handPickedFilter" class="weka.filters.MultiFilter">
		<property name="filters">
			<array>
				<bean class="weka.filters.supervised.attribute.Discretize">
					<property name="attributeIndices" value="3,15,17,18,19,21,24" />
				</bean>
				<bean class="weka.filters.unsupervised.attribute.Remove">
					<property name="attributeIndices" value="3,10,15,17,18,19,21,24,25,26,27" />
					<property name="invertSelection" value="true" />
				</bean>
			</array>
		</property>
	</bean>

	<!-- cost sensitivity wrapper -->
	<bean id="costSensitiveWrapper" class="weka.classifiers.meta.MetaCost">
		<property name="options">
			<array>
				<value>-cost-matrix</value>
				<value>"[0.0 4.0; 1.0 0.0]"</value>	<!-- the cost matrix (row-wise): [TP FN; FP TN] -->
			</array>
		</property>
	</bean>

	<!-- feature selection -->

	<bean id="relief-f" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.ReliefFAttributeEval" />
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.Ranker">
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<bean id="oneR" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.FilteredAttributeEval">
				<property name="filter" ref="spreadFilter" />
				<property name="attributeEvaluator">
					<bean class="weka.attributeSelection.OneRAttributeEval" />
				</property>
			</bean>
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.Ranker">
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<bean id="gainRatio" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.GainRatioAttributeEval">

				<property name="missingMerge" value="false" />
			</bean>
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.Ranker">
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<bean id="cfs" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.CfsSubsetEval">
				<property name="missingSeparate" value="true" />
			</bean>
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.GreedyStepwise">
				<property name="generateRanking" value="false" />
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<bean id="wrapperDT" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.WrapperSubsetEval">
				<property name="classifier">
					<bean class="weka.classifiers.meta.FilteredClassifier">
						<property name="filter" ref="spreadFilter" />
						<property name="classifier">
							<bean class="weka.classifiers.trees.J48" />
						</property>
					</bean>
				</property>
			</bean>
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.GreedyStepwise">
				<property name="generateRanking" value="false" />
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<bean id="wrapperNB" class="weka.attributeSelection.AttributeSelection">
		<property name="evaluator">
			<bean class="weka.attributeSelection.WrapperSubsetEval">
				<property name="classifier">
					<bean class="weka.classifiers.meta.FilteredClassifier">
						<property name="filter" ref="spreadFilter" />
						<property name="classifier">
							<bean class="weka.classifiers.bayes.NaiveBayes" />
						</property>
					</bean>
				</property>
			</bean>
		</property>
		<property name="search">
			<bean class="weka.attributeSelection.GreedyStepwise">
				<property name="generateRanking" value="false" />
				<property name="numToSelect" value="10" />
			</bean>
		</property>
	</bean>

	<!-- classifiers -->

	<bean id="naiveBayes" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.bayes.NaiveBayes" />
		</property>
	</bean>

	<bean id="naiveBayes2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="removeStringFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.bayes.NaiveBayes">
				<property name="useKernelEstimator" value="true"/>
			</bean>
		</property>
	</bean>

	<bean id="bayesNet" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.bayes.BayesNet" />
		</property>
	</bean>

	<bean id="bayesNet2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.bayes.BayesNet">
				<property name="searchAlgorithm">
					<bean class="weka.classifiers.bayes.net.search.local.SimulatedAnnealing" />
				</property>
			</bean>
		</property>
	</bean>

	<bean id="logistic" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.Logistic" />
		</property>
	</bean>

	<bean id="MLP" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.MultilayerPerceptron" />
		</property>
	</bean>

	<bean id="MLP2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.MultilayerPerceptron">
				<property name="validationSetSize" value="10"/>
			</bean>
		</property>
	</bean>

	<bean id="MLP3" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.MultilayerPerceptron">
				<property name="validationSetSize" value="10"/>
				<property name="decay" value="true"/>
			</bean>
		</property>
	</bean>

	<bean id="svm" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.SMO" />
		</property>
	</bean>

	<bean id="svm2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.SMO">
				<property name="buildLogisticModels" value="true" />
				<property name="numFolds" value="5" />
			</bean>
		</property>
	</bean>

	<bean id="svm3" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.functions.SMO">
				<property name="c" value="2.0"/>
			</bean>
		</property>
	</bean>

	<bean id="kNN" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter">
			<bean class="weka.filters.MultiFilter">
				<property name="filters">
					<array>
						<ref bean="balancingFilter" />
						<bean class="weka.filters.unsupervised.attribute.Normalize" />
					</array>
				</property>
			</bean>
		</property>
		<property name="classifier">
			<bean class="weka.classifiers.lazy.IBk">
				<property name="options">
					<array>
						<value>-K</value>
						<value>10</value>	<!-- max k = 10 -->
						<value>-X</value>	<!-- find optimal k doing cross-validation -->
					</array>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="kNN2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter">
			<bean class="weka.filters.MultiFilter">
				<property name="filters">
					<array>
						<ref bean="balancingFilter" />
						<bean class="weka.filters.unsupervised.attribute.Normalize" />
					</array>
				</property>
			</bean>
		</property>
		<property name="classifier">
			<bean class="weka.classifiers.lazy.IBk">
				<property name="options">
					<array>
						<value>-K</value>
						<value>10</value>	<!-- max k = 10 -->
						<value>-X</value>	<!-- find optimal k doing cross-validation -->
						<value>-I</value>	<!-- inverse exponential distance weighting -->
					</array>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="decisionTable" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.rules.DecisionTable">
				<property name="options">
					<array>
						<value>-E</value>
						<value>auc</value>	<!-- use area under curve as evaluation measure -->
					</array>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="decisionTable2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.rules.DecisionTable">
				<property name="options">
					<array>
						<value>-E</value>
						<value>auc</value>	<!-- use area under curve as evaluation measure -->
						<value>-I</value>	<!-- use kNN instead of majority class -->
					</array>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="ripper" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.rules.JRip" />
		</property>
	</bean>

	<bean id="ripper2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.rules.JRip">
				<property name="usePruning" value="false" />
			</bean>
		</property>
	</bean>

	<bean id="decisionTree" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.J48" />
		</property>
	</bean>
	
	<bean id="decisionTree2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.J48">
				<property name="reducedErrorPruning" value="true" />
			</bean>
		</property>
	</bean>
	
	<bean id="decisionTree3" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.J48">
				<property name="unpruned" value="true" />
			</bean>
		</property>
	</bean>
	
	<bean id="cart" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.SimpleCart" />
		</property>
	</bean>
	
	<bean id="cart2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.SimpleCart">
				<property name="useOneSE" value="true" />
			</bean>
		</property>
	</bean>

	<bean id="randomForest" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.RandomForest" />
		</property>
	</bean>
	
	<bean id="randomForest2" class="weka.classifiers.meta.FilteredClassifier">
		<property name="filter" ref="balancingFilter" />
		<property name="classifier">
			<bean class="weka.classifiers.trees.RandomForest">
				<property name="numTrees" value="20" />
			</bean>
		</property>
	</bean>
</beans>