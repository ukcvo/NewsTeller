<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!-- sentence length features -->
	<bean id="sentenceLengthFeatureWordAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordAvg" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="sentenceLengthFeatureWordMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordMin" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="sentenceLengthFeatureWordMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordMax" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharAvg" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharMin" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharMax" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<!-- sentence contains characters features -->
	<bean id="sentenceContainsQuotationFeature" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceContainsCharactersFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceContainsQuotation" />
		<property name="chars">
			<list>
				<value>"</value>
				<value>'</value>
				<value>`</value>
			</list>
		</property>
	</bean>
	
	<!-- sparql count features -->
	<bean id="numberOfKeywordEntitiesFeatureAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfKeywordEntitiesAvg" />
		<property name="valueName" value="numberOfKeywordEntities" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="numberOfKeywordEntitiesFeatureMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfKeywordEntitiesMin" />
		<property name="valueName" value="numberOfKeywordEntities" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="numberOfKeywordEntitiesFeatureMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfKeywordEntitiesMax" />
		<property name="valueName" value="numberOfKeywordEntities" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<bean id="numberOfDbpediaEntitiesFeatureAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfDbpediaEntitiesAvg" />
		<property name="valueName" value="numberOfDbpediaEntities" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="numberOfDbpediaEntitiesFeatureMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfDbpediaEntitiesMin" />
		<property name="valueName" value="numberOfDbpediaEntities" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="numberOfDbpediaEntitiesFeatureMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfDbpediaEntitiesMax" />
		<property name="valueName" value="numberOfDbpediaEntities" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<bean id="numberOfEntitiesFeatureAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfEntitiesAvg" />
		<property name="valueName" value="numberOfEntities" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="numberOfEntitiesFeatureMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfEntitiesMin" />
		<property name="valueName" value="numberOfEntities" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="numberOfEntitiesFeatureMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SparqlCountFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="numberOfEntitiesMax" />
		<property name="valueName" value="numberOfEntities" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<!-- recency features -->
	<bean id="recencyFeatureDays" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RecencyFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="recencyDays" />
		<property name="timeSpan" value="0" />
	</bean>
	
	<bean id="recencyFeatureWeeks" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RecencyFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="recencyWeeks" />
		<property name="timeSpan" value="1" />
	</bean>
	
	<bean id="recencyFeatureMonths" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RecencyFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="recencyMonths" />
		<property name="timeSpan" value="2" />
	</bean>
	
	<bean id="recencyFeatureYears" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RecencyFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="recencyYears" />
		<property name="timeSpan" value="3" />
	</bean>
</beans>