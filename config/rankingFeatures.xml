<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<util:list id="rankingFeatureList"
		value-type="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RankingFeature">
		
		<ref bean="sentenceLengthFeatureWordAvg" />
		<ref bean="sentenceLengthFeatureWordMin" />
		<ref bean="sentenceLengthFeatureWordMax" />
		<ref bean="sentenceLengthFeatureCharAvg" />
		<ref bean="sentenceLengthFeatureCharMin" />
		<ref bean="sentenceLengthFeatureCharMax" />
		<ref bean="embeddingsFeatureAvg" />
		<ref bean="embeddingsFeatureMin" />
		<ref bean="embeddingsFeatureMax" />
		<ref bean="embeddingsFeatureGeom" />
		<ref bean="sentenceContainsQuotationFeature" />
	</util:list>

	<!-- sentence length features -->
	<bean id="sentenceLengthFeatureWordAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordAvg" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="sentenceLengthFeatureWordMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordMin" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="sentenceLengthFeatureWordMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthWordMax" />
		<property name="useWordCount" value="true" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharAvg" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharMin" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="sentenceLengthFeatureCharMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceLengthFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceLengthCharMax" />
		<property name="useWordCount" value="false" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<!-- embeddings features -->
	<bean id="embeddingsFeatureAvg" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.EmbeddingsFeature">
		<constructor-arg name="embeddingsFileName" value="resources/wordvectors/glove.6B.50d.txt" />
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="embeddingsAvg" />
		<property name="aggregationType" value="0" />
	</bean>
	
	<bean id="embeddingsFeatureMin" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.EmbeddingsFeature">
		<constructor-arg name="embeddingsFileName" value="resources/wordvectors/glove.6B.50d.txt" />
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="embeddingsMin" />
		<property name="aggregationType" value="1" />
	</bean>
	
	<bean id="embeddingsFeatureMax" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.EmbeddingsFeature">
		<constructor-arg name="embeddingsFileName" value="resources/wordvectors/glove.6B.50d.txt" />
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="embeddingsMax" />
		<property name="aggregationType" value="2" />
	</bean>
	
	<bean id="embeddingsFeatureGeom" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.EmbeddingsFeature">
		<constructor-arg name="embeddingsFileName" value="resources/wordvectors/glove.6B.50d.txt" />
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="embeddingsGeom" />
		<property name="aggregationType" value="3" />
	</bean>
	
	<!-- sentence contains characters features -->
	<bean id="sentenceContainsQuotationFeature" class="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.SentenceContainsCharactersFeature">
		<property name="ksAdapter" ref="ksAdapter" />
		<property name="name" value="sentenceContainsQuotation" />
		<property name="chars">
			<list>
				<value>"</value>
				<value>'</value>
				<value>`</value>
			</list>
		</property>
	</bean>
	
</beans>