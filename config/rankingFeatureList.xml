<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<import resource="rankingFeatures.xml"/>
	<import resource="rankingEmbeddingsFeatures.xml"/>

	<util:list id="rankingFeatureList"
		value-type="edu.kit.anthropomatik.isl.newsTeller.retrieval.ranking.features.RankingFeature">
		
		<ref bean="sentenceLengthFeatureWordAvg" />
		<ref bean="sentenceLengthFeatureWordMin" />
		<ref bean="sentenceLengthFeatureWordMax" />
		<ref bean="sentenceLengthFeatureCharAvg" />
		<ref bean="sentenceLengthFeatureCharMin" />
		<ref bean="sentenceLengthFeatureCharMax" />
		
		<ref bean="embeddingsFeatureAvg" />
		<ref bean="embeddingsFeatureMin" />
		<ref bean="embeddingsFeatureMax" />
		<ref bean="embeddingsFeatureGeom" />
		
		<ref bean="embeddingsFeatureTitleAvg" />
		<ref bean="embeddingsFeatureTitleMin" />
		<ref bean="embeddingsFeatureTitleMax" />
		<ref bean="embeddingsFeatureTitleGeom" />
		
		
		<ref bean="sentenceContainsQuotationFeature" />
		
		<ref bean="numberOfKeywordEntitiesFeatureAvg" />
		<ref bean="numberOfKeywordEntitiesFeatureMin" />
		<ref bean="numberOfKeywordEntitiesFeatureMax" />
		<ref bean="numberOfDbpediaEntitiesFeatureAvg" />
		<ref bean="numberOfDbpediaEntitiesFeatureMin" />
		<ref bean="numberOfDbpediaEntitiesFeatureMax" />
		<ref bean="numberOfEntitiesFeatureAvg" />
		<ref bean="numberOfEntitiesFeatureMin" />
		<ref bean="numberOfEntitiesFeatureMax" />
		
	</util:list>
	
</beans>